<%= link_to "Delete group", @group, method: :delete, data: {confirm: "You sure?"}, class: "btn btn-default btn-lg btn-primary"%>

<%= form_for (@group), url: group_manage_general_path(@group), method: :patch do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
	<%= f.label :public? %>
	<%= f.check_box :public? %>
  <%= f.submit "Save changes", class: "btn btn-default btn-lg btn-primary" %>
<% end %>