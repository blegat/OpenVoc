<% provide(:title, 'Training' ) %>
<h1>Configure your training</h1>


<%= form_for(@train)  do |f| %>
  <%= f.label :max, "Max:" %>
  <%= f.text_field :max %>
	<%= f.hidden_field :rec, value: 0 %>
	<%= f.hidden_field :list_id, value:params[:list_id] %>
	<br>
	<%= f.label(:include_sub_lists, "Ask words in the sub-lists") %>
	<%= f.check_box(:include_sub_lists) %>
	
	<br>
	<%= f.label(:error_policy, "If I'm wrong:") %>
	<%= f.select(:error_policy, options_for_select([['Ask just once', 1], ['Ask again until I know the word', 2]], 2)) %>
	<br>
	
	<%= f.label(:type_of_train, "Kind of test") %>
	<%= f.select(:type_of_train, options_for_select([['Fill-in', 1],
	#	 																							 ['Multiple choice', 2]
																									 ], 1)) %>
	<br>
	
	<%= f.label(:q_to_a, "What to ask") %>
	<%= f.select(:q_to_a, options_for_select([["#{@lang1} -> #{@lang2}", 1], ["#{@lang1} <- #{@lang2}", 2], ["#{@lang1} <-> #{@lang2}", 3]], 1)) %>
	<br>
	
  <%= f.submit "Let's train!", class: "btn btn-default" %>
<% end %>

<%= back_to_list %>
