<% provide(:title, 'Training' ) %>
<h1>Summary</h1>
<p>Here is a summary of your training:</p>

<p>Failed words:</p>
	<section class="col-md-12 table-responsive">
	  <table class="table table-bordered table-striped table-condensed">
	    <thead>
		  <tr>
		    <th>Asked</th>
		    <th>Expected</th>
				<th>Answer</th>
				<th>Success ratio (%)</th>
		  </tr>
		  </thead>
	    <tbody>
  					<% @list_frag_failed.each do |f| %>
						<% if f.item1_is_word %>
						  <% content1 = Word.find(f.item1_id).content %>
						<% else %>
						  <% content1 = Meaning.find(f.item1_id).words_in_one_lang(Language.find(f.language1_id)) %>
						<% end %>
						<% if f.item2_is_word %>
						  <% content2 = Word.find(f.item2_id).content %>
						<% else %>
						  <% content2 = Meaning.find(f.item2_id).words_in_one_lang(Language.find(f.language2_id)) %>
						<% end %>
	            <tr>
	        			<td><%= content1 %></td>
	        			<td><%= content2 %></td>
								<td><%= f.answer %></td>
								<% if f.q_to_a == true %>
									<td><%= WordSet.find(f.word_set_id).success_ratio_qa.to_i %></td>
							  <% else %>
									<td><%= WordSet.find(f.word_set_id).success_ratio_aq.to_i %></td>
								<% end %>
  		        </tr>	
	          <% end %>
	    </tbody>
	  </table>
  </section>

<p>Succeeded words:</p>
	<section class="col-md-12 table-responsive">
	  <table class="table table-bordered table-striped table-condensed">
	    <thead>
		  <tr>
		    <th>Asked</th>
		    <th>Expected</th>
				<th>Answer</th>
				<th>Success ratio (%)</th>
		  </tr>
		  </thead>
	    <tbody>
  					<% @list_frag_succeeded.each do |f| %>
						<% if f.item1_is_word %>
						  <% content1 = Word.find(f.item1_id).content %>
						<% else %>
						  <% content1 = Meaning.find(f.item1_id).words_in_one_lang(Language.find(f.language1_id)) %>
						<% end %>
						<% if f.item2_is_word %>
						  <% content2 = Word.find(f.item2_id).content %>
						<% else %>
						  <% content2 = Meaning.find(f.item2_id).words_in_one_lang(Language.find(f.language2_id)) %>
						<% end %>
	            <tr>
	        			<td><%= content1 %></td>
	        			<td><%= content2 %></td>
								<td><%= f.answer %></td>
								<% if f.q_to_a == true %>
									<td><%= WordSet.find(f.word_set_id).success_ratio_qa.to_i %></td>
							  <% else %>
									<td><%= WordSet.find(f.word_set_id).success_ratio_aq.to_i %></td>
								<% end %>
  		        </tr>	
	          <% end %>
	    </tbody>
	  </table>
  </section>



<%= back_to_list %>
