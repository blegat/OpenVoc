<% provide(:title, 'Training' ) %>
<h1>Summary</h1>
<p>Here is a summary of your training:</p>

<p>Failed words:</p>
	<section class="col-md-12 table-responsive">
	  <table class="table table-bordered table-striped table-condensed">
	    <thead>
		  <tr>
		    <th>Asked</th>
		    <th>Expected</th>
				<th>Answer</th>
				<th>Success ratio (%)</th>
		  </tr>
		  </thead>
	    <tbody>
  					<% @list_frag_failed.each do |f| %>
	            <tr>
	        			<td><%= Word.find(f.word1_id).content %></td>
	        			<td><%= Word.find(f.word2_id).content %></td>
								<td><%= f.answer %></td>
								<% if f.q_to_a == true %>
									<td><%= WordSet.find(f.word_set_id).success_ratio_qa %></td>
							  <% else %>
									<td><%= WordSet.find(f.word_set_id).success_ratio_aq %></td>
								<% end %>
  		        </tr>	
	          <% end %>
	    </tbody>
	  </table>
  </section>

<p>Succeeded words:</p>
	<section class="col-md-12 table-responsive">
	  <table class="table table-bordered table-striped table-condensed">
	    <thead>
		  <tr>
		    <th>Asked</th>
		    <th>Expected</th>
				<th>Answer</th>
				<th>Success ratio (%)</th>
		  </tr>
		  </thead>
	    <tbody>
  					<% @list_frag_succeeded.each do |f| %>
	            <tr>
	        			<td><%= Word.find(f.word1_id).content %></td>
	        			<td><%= Word.find(f.word2_id).content %></td>
								<td><%= f.answer %></td>
								<% if f.q_to_a == true %>
									<td><%= WordSet.find(f.word_set_id).success_ratio_qa %></td>
							  <% else %>
									<td><%= WordSet.find(f.word_set_id).success_ratio_aq %></td>
								<% end %>
  		        </tr>	
	          <% end %>
	    </tbody>
	  </table>
  </section>



<%= back_to_list %>
