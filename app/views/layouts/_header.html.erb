<header class="navbar navbar-fixed-top">
<!--<header class="navbar navbar-fixed-top navbar-inverse">-->
<!-- navbar-inverse make it black -->
<div class="navbar-inner">
  <div class="container">

    <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
    <button class="btn btn-navbar"
      data-toggle="collapse" data-target=".nav-collapse" type="button">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

    <%= link_to "Openvoc", root_path, class: "brand" %>

    <!-- Everything within here will be hidden at 940px or less -->
    <!-- Adding collapse class to nav make it open by default -->
    <nav class="nav-collapse">
      <ul class="nav">
        <li <%= "class=active" if yield(:title) == "Languages" %>>
        <%= link_to "Languages", languages_path %></li>
        <li <%= "class=active" if yield(:title) == "New link" %>>
        <%= link_to "New link", new_link_path %></li>
      </ul>
      <ul class="nav pull-right">

      <% if current_user %>
        <li id="fat-menu" class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= current_user.name %> <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li>
          <%= link_to "Profile", current_user %>
          </li>
          <li>
          <%= link_to "Authentications", authentications_path %>
          </li>
          <li>
          <%= link_to "Settings", edit_user_path(current_user) %>
          </li>
          <li class="divider"></li>
          <li>
          <%= link_to "Sign out", signout_path %>
          </li>
        </ul>
        </li>
      <% else %>
        <li <%= "class=active" if yield(:title) == "Sign in" %>>
        <%= link_to "Sign in", signin_path %>
        </li>
      <% end %>

      <li <%= "class=active" if yield(:title) == "Contact" %>>
      <%= link_to "Contact", contact_path %></li>
      </ul>
    </nav>
  </div>
</div>
</header>
