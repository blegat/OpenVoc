<header>
<nav class="navbar navbar-default navbar-fixed-top">
  <!--<header class="navbar navbar-fixed-top navbar-inverse">-->
  <!-- navbar-inverse make it black -->
  <div class="container">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Openvoc", root_path, class: "navbar-brand" %>
    </div>


    <!-- Everything within here will be hidden at 940px or less -->
    <!-- Adding collapse class to nav make it open by default -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li <%= "class=active" if yield(:title) == "Languages" %>>
        <%= link_to "Languages", languages_path %></li>
        <li <%= "class=active" if yield(:title) == "New link" %>>
        <%= link_to "New link", new_link_path %></li>
        <li <%= "class=active" if yield(:title) == "Public lists" %>>
        <%= link_to "Public lists", public_path %></li>
        <li <%= "class=active" if yield(:title) == "Groups" %>>
        <%= link_to "Groups", groups_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li id="fat-menu" class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= current_user.name %> <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li>
          <%= link_to "Profile", current_user %>
          </li>
          <li>
          <%= link_to "Lists", lists_path %>
          </li>
          <li>
          <%= link_to "Authentications", authentications_path %>
          </li>
          <li>
          <%= link_to "Settings", edit_user_path(current_user) %>
          </li>
          <li class="divider"></li>
          <li>
          <%= link_to "Sign out", signout_path %>
          </li>
        </ul>
        </li>
      <% else %>
          <li <%= "class=active" if yield(:title) == "Sign in" %>>
        <%= link_to "Sign in", signin_path %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</nav>
</header>
